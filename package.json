{
    "name": "reopeneuropa-graphql",
    "description": "Unofficial GraphQL API fetching data from reopen.europa.eu",
    "version": "0.0.1",
    "author": {
        "name": "Peter Aleksander Bizjak",
        "email": "peteralex.developer@gmail.com"
    },
    "private": true,
    "license": "MIT",
    "scripts": {
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"src/**/*.ts\" --fix",
        "prettify": "npm run format && npm run lint",
        "build": "rm -rf dist && npm run prettify && nest build",
        "start": "npm run build && node dist/main",
        "test": "jest"
    },
    "dependencies": {
        "@nestjs/common": "^8.0.7",
        "@nestjs/core": "^7.6.15",
        "@nestjs/graphql": "^7.10.3",
        "@nestjs/platform-fastify": "^7.6.15",
        "apollo-server-express": "^2.22.1",
        "apollo-server-fastify": "^2.22.1",
        "axios": "^0.24.0",
        "graphql": "^15.5.0",
        "graphql-tools": "^7.0.4",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^6.6.6"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.6.0",
        "@nestjs/schematics": "^7.3.1",
        "@nestjs/testing": "^7.6.15",
        "@types/jest": "^26.0.22",
        "@types/node": "^14.14.37",
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.19.0",
        "eslint": "^7.23.0",
        "husky": "^5.2.0",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "ts-jest": "^26.5.4",
        "ts-loader": "^8.0.18",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.2.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "ts"
        ],
        "rootDir": ".",
        "testRegex": "[.]spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "./coverage",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/src/"
        ]
    },
    "lint-staged": {
        "src/**/*.ts": [
            "npm run prettify",
            "git add ."
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}